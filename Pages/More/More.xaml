<Page x:Class="MielLauncher.Pages.More.More"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MielLauncher.Pages.More"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="More">

    <Grid>
        <TextBlock Margin="20, 20, 20, 20" HorizontalAlignment="Left" VerticalAlignment="Top" Text="更多" FontSize="25"/>

        <TabControl Margin="10, 70, 10, 10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="关于">
                <Grid>
                    <TextBlock Margin="10, 10, 10, 10" Text="By Bilibili @_Windows11_，此版本下载站请注明出处" FontSize="15"/>
                    <TextBlock x:Name="VersionName" Margin="10, 40, 10, 10" Text="加载版本……" FontSize="15"/>
                </Grid>
            </TabItem>
            <TabItem Header="更新日志">
                <Grid>
                    <ScrollViewer Margin="10, 10, 10, 10" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="UpdateLog" Text="加载更新日志……" FontSize="15" TextWrapping="WrapWithOverflow"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
